<%- include('partials/header')%>
<%- include('partials/navbar')%>
<style>
    body{
        background-image: url('../img/users.jpg');
        background-size: cover;
    }
</style>
<body>
    <hr>
    <div class="container">
        <div class="card bg-dark text-white">
            <div class="card-header">
                <div style="display: flex; justify-content: space-between;">
                    <h2>Lista de Usuários</h2>
                    <div>
                        <a href="/new-user" class="btn btn-light">Criar Novo Usuário</a>
                    </div>
                </div>
                <div style="width: 100%; border: 1px solid #fff;"></div>
                
            </div>
            <div class="card-body">
                
                <table class="table table-bordered text-white">
                        
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>NOME</th>                    
                                <th>E-MAIL</th>
                                <th>AÇÕES</th>
                            </tr>
                        </thead>
                        <tbody>
                    <% users.forEach(user => { %>
                        
                        <tr>
                           <td><%= user.id %></td>
                            <td><%= user.name %></td> 
                            <td><%= user.email %></td>
                         
                            <td>
                                <a href="edit/<%= user.id %>" class="btn btn-warning btn-sm ml-2 mb-2">Editar</a>
                                <form action="/delete" method="post" style="display: inline;" onsubmit="confirmDel(event, this)">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <button class="btn btn-danger btn-sm ml-2 mb-2">Deletar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
                </ul>
                <a class="btn btn-light btn-sm mt-2" href="/admin">Voltar</a>
            </div>
        </div>
    </div>
</body>

<script>

    function confirmDel(event, form) {
        event.preventDefault()
        let decision = confirm('Deseja deletar usuário?')
        if(decision) {
            form.submit();
        }
    }

</script>

</html>